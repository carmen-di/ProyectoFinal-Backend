<link rel="stylesheet" href= "/css/products.css">

<div class="encabezado">
    <h1>Bienvenidx {{user}}</h1>
    <p>Role: {{user.role}}</p>
    <button id="btnLogout" class="btnLogout" type="submit">Cerrar Sesi√≥n</button>
</div>

<div class="container">
  <div class="forms">
    <div>
      <h2>Lista de productos disponibles</h2>
      {{#if hayProductos}}
      <div class="products-cart" id={{cartSelectedId}}></div>
        <ul id="view-product-list" class="product-list">
          {{#each response.payload}}
            <li id={{this._id}}>
              <div>
                <strong class="prod-title">{{this.title}}</strong>
                <br />
                <strong>Price:</strong>
                ${{this.price}}
                <br />
                <strong>Description:</strong>clear
                {{this.description}}
                <br />
                <strong>Category:</strong>
                {{this.category}}
                <br />
                <strong>Id:</strong>
                {{this._id}}
                <br />
                <strong>Owner Id:</strong>
                {{this.owner}}</div>
              <div class="add-to-cart-btn-container">
                <button id={{this._id}} class="products-add-to-cart-btn">
                    Agregar al
                  carrito
                  </button>
              </div>
            </li>
            <br />
          {{/each}}
        </ul>
      {{/if}}
      <div class="pagination">
        {{#if response.hasPrevPage}}
          <button class="next-prev-pagination-btn"><a
              href={{response.prevLink}}
            >Anterior</a></button>
        {{/if}}
        {{#if response.hasNextPage}}
          <button class="next-prev-pagination-btn"><a
              href={{response.nextLink}}
            >Siguiente</a></button>
        {{/if}}
      </div>
      <h2>Pagina: {{response.page}}</h2>
    </div>
  </div>

</div>
